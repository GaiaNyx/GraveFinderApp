<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".picsAndMemosActivity"
    android:orientation="vertical"
    android:background="@drawable/graveyard">

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תפריט"
        android:backgroundTint="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvImgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תמונות"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="right"
        android:textStyle="bold"
        android:background="@color/white"
        android:backgroundTint="#adbfc9"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGraveImgs"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        

        />

    <TextView
        android:id="@+id/tvMemos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="זכרונות"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:background="@color/white"
        android:backgroundTint="#adbfc9"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGraveMemos"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        />

    <Button
        android:id="@+id/btnAddPicsAndMemos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הוספה"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:backgroundTint="#adbfc9"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>