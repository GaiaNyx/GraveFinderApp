<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addPicsAndMemosActivity"
    android:orientation="vertical"
    android:background="@drawable/signupbg">

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תפריט"
        android:backgroundTint="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvGraveName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שם הנפטר"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:textSize="40dp"
        android:layout_marginRight="40dp"/>


    <Button
            android:id="@+id/btnAddPics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הוספת תמונות"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:backgroundTint="#50A5D5"
            android:layout_marginTop="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"/>

    <Button
            android:id="@+id/btnCameraPics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="צילום תמונה"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:backgroundTint="#50A5D5"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"/>



    <Button
        android:id="@+id/btnAddMemos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הוספת PDF"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:backgroundTint="#50A5D5"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"/>








</androidx.appcompat.widget.LinearLayoutCompat>