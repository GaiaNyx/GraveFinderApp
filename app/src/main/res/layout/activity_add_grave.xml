<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addGraveActivity"
    android:orientation="vertical"
    android:background="@drawable/signupbg">

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תפריט"
        android:backgroundTint="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etGraveName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="שם הנפטר"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:textSize="40dp"
        android:layout_marginRight="40dp" />

    <EditText
        android:id="@+id/etBirthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="תאריך לידה"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"/>

    <EditText
        android:id="@+id/etDeathDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="תאריך פטירה"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"/>

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="מידע אודות הנפטר"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:maxHeight="150dp"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:textSize="18dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="40dp"
        android:text="לאחר השמירה תוכלו להוסיף מיקום, תמונות וקבצים בדף הקבר" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שמור"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:backgroundTint="#5A5B9C"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"/>




</androidx.appcompat.widget.LinearLayoutCompat>